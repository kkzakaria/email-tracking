{
  "buildCommand": "next build --turbopack",
  "framework": "nextjs",
  "functions": {
    "app/api/**": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "SKIP_ENV_VALIDATION": "1"
    }
  },
  "crons": [
    {
      "path": "/api/cron/renew-webhooks",
      "schedule": "0 */6 * * *"
    }
  ]
}