{
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "imports": {
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2",
    "std/": "https://deno.land/std@0.168.0/",
    "_shared/": "./functions/_shared/"
  },
  "lint": {
    "include": ["**/*.ts"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "include": ["**/*.ts"],
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}